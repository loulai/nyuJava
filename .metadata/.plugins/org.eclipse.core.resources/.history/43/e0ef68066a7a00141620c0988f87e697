import processing.core.PApplet;

public class ProcessingTest extends PApplet {	
	
	int timeCounter = 0;
	Disk[] d = new Disk[8];
	
	public void setup() {
		
		size(600,400);
		background(255);
		
		for(int i = 0; i < 8; i++){
			d[i] = new Disk(this);
		}
		
	}
	
	public void draw() {
		timeCounter++;
		
		if (timeCounter < 550) {
			background(100,100,100);
			
			for(int i = 0; i < d.length; i ++) {
				ellipse(d[i].getX(),d[i].getY(), d[i].getRX(),d[i].getRY());
				textSize(10);
				fill(0,0,0);
				textAlign(CENTER);
				text(d[i].getValue(), d[i].getX(), d[i].getY());
			}
			
		}
		
	}
}