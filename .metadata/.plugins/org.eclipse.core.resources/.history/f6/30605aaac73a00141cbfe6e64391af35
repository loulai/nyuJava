
public class Main {

	public static void main(String[] args) {
		
		int oneCounter = 0;
		int twoCounter = 0;
		int threeCounter = 0;
		int fourCounter = 0;
		int fiveCounter = 0;
		int sixCounter = 0;
		
		for (int i = 0; i < 100; i++) {
			
			Double myDouble = Math.random() * 6 + 1;
			
			int dice = myDouble.intValue();
			
			if (dice == 1) {
				oneCounter++;
			} else if (dice == 2) {
				twoCounter++;
			} else if (dice == 3) {
				threeCounter++;
			} else if (dice == 4) {
				fourCounter++;
			} else if (dice == 5) {
				fiveCounter++;
			} else {
				sixCounter++;
			}
		}
		
		Double oneChance = oneCounter / 100;
		
		System.out.printf("1 was rolled %f of the times", oneChance);	
		System.out.println("Two Counter has: " + twoCounter);
		System.out.println("Three Counter has: " + threeCounter);
		System.out.println("Four Counter has: " + fourCounter);	
		System.out.println("Five Counter has: " + fiveCounter);
		System.out.println("Six Counter has: " + sixCounter);
		
	}

}
