import processing.core.PApplet;

public class ProcessingTest extends PApplet {	
	
	int timeCounter = 0;
	Disk[] totalDisks = new Disk[8];
	
	public void setup() {
		
		size(600,400);
		background(255);
		
		for(int i = 0; i < 8; i++){
			totalDisks[i] = new Disk(this);
		}
		
	}
	
	public void draw() {
		timeCounter++;
		
		if (timeCounter < 550) {
			background(200,200,200);
			
			for(int i = 0; i < totalDisks.length; i ++) {
				ellipse(totalDisks[i].getX(),totalDisks[i].getY(), totalDisks[i].getRX(),totalDisks[i].getRY());
			}
			
		}
		
	}
}