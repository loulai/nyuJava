
public class Main {

	public static void main(String[] args) {
		
		int oneCounter = 0;
		int twoCounter = 0;
		int threeCounter = 0;
		int fourCounter = 0;
		int fiveCounter = 0;
		int sixCounter = 0;
		
		for (int i = 0; i < 100; i++) {
			
			Double myDouble = Math.random() * 6 + 1;
			
			int dice = myDouble.intValue();
			
			if (dice == 1) {
				oneCounter++;
			} else if (dice == 2) {
				twoCounter++;
			} else if (dice == 3) {
				threeCounter++;
			} else if (dice == 4) {
				fourCounter++;
			} else if (dice == 5) {
				fiveCounter++;
			} else {
				sixCounter++;
			}
		}

		
		System.out.printf("1 was rolled %d%% of the times \n", (oneCounter/100.0));	
		System.out.printf("2 was rolled %d%% of the times \n", + twoCounter);
		System.out.printf("3 was rolled %d%% of the times \n", + threeCounter);
		System.out.printf("4 was rolled %d%% of the times \n", + fourCounter);	
		System.out.printf("5 was rolled %d%% of the times \n", + fiveCounter);
		System.out.printf("6 was rolled %d%% of the times \n", + sixCounter);
		
	}

}
