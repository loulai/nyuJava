package hw5;

public class ShiftByOneRefactored {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "crabs";
		char[] chars = s.toCharArray();
		char storer;
		char swapper;
		
		storer = chars[1];
		chars[1] = chars[0];
		
		for(int i = 2; i < chars.length; i++){
			swapper = storer;
			storer = chars[i];
			chars[i] = swapper;
			System.out.printf("== #%d shift: %s, (%s)\n", i, new String(chars), storer);
		}
	}

}
