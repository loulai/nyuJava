/*Author     : Louise (Lou) Lai
 *Created on : September 23rd 2014
 *Description: Program uses a random number (0 to 51) to generate a single card.
 */
public class GetCard {

	public static void main(String[] args) {
		
//		int number = (int) (Math.random() * 52);
		
		int number = 52;
		
		System.out.println("The random number, before adding anything: " + number);
		
		number = number + 1;
		
		if (number % 13 == 1){
			System.out.print("Ace");
		} else if (number % 13 == 11){
			System.out.print("King");
		} else if (number % 13 == 12) {
		System.out.print("Queen");
		} else if (number % 13 == 0) {
			System.out.print("Jack");
		} else {
			System.out.print(number - ((number - 1)/13) * 13);
		}
		
		number = number - 1;
		
		if (number / 13 == 0) {
			System.out.print(" of hearts");
		} else if (number / 13 == 1) {
			System.out.print(" of spades");
		} else if (number / 13 == 2) {
			System.out.print(" of clubs");
		} else {
			System.out.print(" of diamonds");
		}
		
	}

}
