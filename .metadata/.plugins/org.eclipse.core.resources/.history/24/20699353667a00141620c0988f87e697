import processing.core.PApplet;

public class ProcessingTest extends PApplet {	
	public void setup() {
		size(600,400);
		background(255);
		frameRate(4);
	}
	
	public void draw() {
		
		background(100,100,100);
		Disk d = new Disk(this);

		ellipse(d.getX(), d.getY(), d.getRX(), d.getRY());
		
		fill(random(0,200),random(0,10),random(0,200));
		
		textSize(100);
		text(d.getValue(), mouseX, mouseY);
		
		
	}
}