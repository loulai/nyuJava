package hw5;

public class ShiftByOne {

	public static void main(String[] args){
		String s = "hello";
		//to       "ohell"
		char[] chars = s.toCharArray();
		char temp;
		
		temp = chars[1];  //store e
		chars[1] = chars[0]; //change 2nd pos to be first letter (e to h)
		chars[2] = temp;  //change 3rd pos to be second letter (l to e)
		System.out.println("first shift: " + new String(chars));
		
		//second shift
		temp = chars[2]; //store l (3rd pos)
		chars[2] = chars[1];
		chars[3] = temp;
		System.out.println("second shift: " + new String(chars));
		
		//third shift
		temp = chars[3];
		chars[3] = chars[2];
		chars[4] = temp;
		System.out.println("third shift: " + new String(chars));
		
		
		String shifted = new String(chars);
		System.out.println(shifted);
	}

}
