package hw5;

public class ShiftByOne {

	public static void main(String[] args){
		String s = "crabs";
		        //  c r a b s
		        //  0 1 2 3 4
		
		//ccrbs
		//ccrab
		//scrab
		        //  s c r a b <<
	
		char[] chars = s.toCharArray();
		char temp;
		char temp2;
		
		temp = chars[1];  //store r
		chars[1] = chars[0]; //change 2nd pos to be first letter
		temp2 = chars[2];   //store the letter thats about to be replaced
		chars[2] = temp;  //change 3rd pos to be second letter 
		System.out.println("first shift: " + new String(chars));
		System.out.printf("\ntemp 1: %s\ntemp 2: %s", temp, temp2);
		
		//second shift
		temp = chars[3];
		chars[3] = temp2;
		System.out.println("second shift: " + new String(chars));
		
		//third shift
		
		System.out.println("third shift: " + new String(chars));
		
		
		String shifted = new String(chars);
		System.out.println(shifted);
	}

}
