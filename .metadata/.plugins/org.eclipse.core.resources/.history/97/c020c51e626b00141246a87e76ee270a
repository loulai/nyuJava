
public class Test {

	public static void main(String[] args) {
		int[] num = {1,0,3,5,2,1,19,3,1,4,39,-49,4};	
		bubbleSort(num);
		for(int i =0; i < num.length; i++)
		{
			System.out.printf("%3d", num[i]);
		}
	}
	
	public static int[] bubbleSort(int[] num) {
		
		boolean again = true;
		int temp;
		
		while(again) {
			again = false;
			for(int i = 0; i < num.length - 1; i++) {
				if(num[i] > num[i + 1]){
					temp = num[i];
					num[i] = num[i+1];
					num[i+1] = temp;
					again = true;
				}
			}
		}
		return num;
	}
	

}
