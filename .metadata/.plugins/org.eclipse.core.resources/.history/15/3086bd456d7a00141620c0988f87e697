import processing.core.PApplet;

public class ProcessingTest extends PApplet {	
	
	int timeCounter = 0;
	Disk[] totalDisks = new Disk[8];
	int score = 0;
	
	public void setup() {
		
		size(800,600);
		background(255);
		
		for(int i = 0; i < 8; i++){
			totalDisks[i] = new Disk(this);
		}
		
	}
	
	public void draw() {
		timeCounter++;
		
		if (timeCounter < 550) {
			background(100,100,100);
			
			for(int i = 0; i < totalDisks.length; i ++) {
				Disk d = totalDisks[i];
				ellipse(d.getX(),d.getY(), d.getRX(),d.getRY());
				d.move();
				textSize(60);
				fill(0,0,0);
				textAlign(CENTER);
				text(d.getValue(), d.getX(), d.getY());
				
				if(mousePressed){
					if(mouseX >= (d.getX() - 30) && mouseX <= (d.getX() + 30) && mouseY >= (d.getY() - 30) && mouseY <= (d.getY() + 30)){
						score = score + d.getValue();
						d.setNewCoordinates();
					}
				}
				
				text(score, 70,70);
			}
			
			
		} else {
			background(100,100,100);
			text(score, 300,300);
		}
		
	}
}