
public class Main {

	public static void main(String[] args) {
		
		long oneCounter = 0;
		long twoCounter = 0;
		long threeCounter = 0;
		
		for (int i = 0; i < 7; i++) {
			Double myDouble = Math.random() * 3 + 1;
			
			long myLong = Math.round(myDouble);
			
			System.out.println(myLong);
			
			if (myLong == 1) {
				oneCounter++;
				System.out.println(oneCounter);
			} else if (myLong == 2) {
				twoCounter++;
				System.out.println(twoCounter);
			} else {
				threeCounter++;
				System.out.println(threeCounter);
			}
		}
		
		
	}

}
