import processing.core.PApplet;

public class Play extends PApplet {
	
	public void setup() {
		size(400,400);
		background(255);
	}
	
	float ballX = 0;
	float ballY = 0;
	float speedX = 1;
	float speedY = 2;
	
	public void draw(){
		background(100,200,50);
		ballX = ballX + speedX;
		ballY = ballY + speedY;
		rect(mouseX,2,20,1);
		ellipse(ballX,ballY,20,20);
	}
}
