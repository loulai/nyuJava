import processing.core.PApplet;

public class Play extends PApplet {
	
	public void setup() {
		size(400,400);
		background(255);
	}
	
	float ballX = 0;
	float ballY = 0;
	float speedX = 2;
	float speedY = 1;
	
	public void draw(){
		float paddle = 100;
		if(ballX < 0 || ballX > width)
			speedX = -speedX;
		
		if(ballY < 0 || ballY > height) {
			speedY = -speedY;
		} else {
			speedY = speedY +1;
		}
		
		ballX = ballX + speedX;
		ballY = ballY + speedY;
		background(100,200,50);
		rect(mouseX-paddle,height-4,2*paddle,3);
		ellipse(ballX,ballY,20,20);
	}
}
