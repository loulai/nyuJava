
public class Main {

	public static void main(String[] args) {
		
		int oneCounter = 0;
		int twoCounter = 0;
		int threeCounter = 0;
		int fourCounter = 0;
		int fiveCounter = 0;
		int sixCounter = 0;
		
		for (int i = 0; i < 100000; i++) {
			
			Double dice = Math.random() * 6.0 + 1.0;
			
			
			if (dice < 2) {
				oneCounter++;
			} else if (dice < 3) {
				twoCounter++;
			} else if (dice < 4) {
				threeCounter++;
			} else if (dice < 5) {
				fourCounter++;
			} else if (dice < 6) {
				fiveCounter++;
			} else {
				sixCounter++;
			}
		}
		

		
		System.out.printf("1 was rolled %f%% of the times \n", + (oneCounter/100000.0)*100);	
		System.out.printf("2 was rolled %f%% of the times \n", + (twoCounter/100000.0)*100);
		System.out.printf("3 was rolled %f%% of the times \n", + (threeCounter/100000.0)*100);
		System.out.printf("4 was rolled %f%% of the times \n", + (fourCounter/100000.0)*100);	
		System.out.printf("5 was rolled %f%% of the times \n", + (fiveCounter/100000.0)*100);
		System.out.printf("6 was rolled %f%% of the times \n", + (sixCounter/100000.0)*100);
	
		
	}

}
