
public class Letters {

	public static void main(String[] args) {
		
		System.out.println("Enter a character: ");
		Scanner rawInput = new Scanner(System.in);
		char input = rawInput.nextChar();
		
		char value = Character.toLowerCase(input);
		
		if (Character.isLetter(value)) {
			
			if (value == 'a' || value ==  'e' || value ==  'i' || value == 'o' || value == 'u') {
				System.out.print(input + " is a vowel.");
			} else {
				System.out.print(input + " is a consonant.");
			}
			
		} else {
			System.out.print(input + " is not a letter.");
		}

	}

}
