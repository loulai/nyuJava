import java.util.Scanner;


public class Main {

	public static void main(String[] args) {
		
		System.out.println("Size of your array? (row by column): ");
		Scanner input = new Scanner(System.in);
		int row = input.nextInt();
		int column = input.nextInt();

		generateMatrix(row, column);
		
	}
	
	public static void generateMatrix(int row, int width) {
		int[][] matrix = new int[row][width];
	}
	
	public static void printMatrix(int[][] matrix){
		int totalElements = matrix.length * matrix[0].length; // counts number of rows then lengths, then sums it to get total elements
		for(int i = 0; i < totalElements; i++) {
			System.out.println(totalElements);
		}
	}

}
